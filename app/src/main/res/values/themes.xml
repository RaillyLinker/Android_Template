<resources>
    <!-- Base application theme. -->
    <!-- 참고 : https://material.io/design/color/the-color-system.html#color-theme-creation -->
    <style name="Theme.Application" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 상태바 -->
        <!-- colorPrimary 의 rgb 각각 -8 -->
        <item name="android:statusBarColor">#3373d2</item>

        <!-- 소프트 네비게이션 바 색 -->
        <item name="android:navigationBarColor">#FF000000</item>

        <!-- 어플리케이션 주 색상 -->
        <!-- ex : 액션바, 버튼 -->
        <item name="colorPrimary">#FF3D7DDC</item>
        <!-- 어플리케이션 주 색상 그림자 -->
        <!-- 어플리케이션 주 색상 rgb 각각 -8 -->
        <item name="colorPrimaryVariant">#3373d2</item>
        <!-- 어플리케이션 주 색상 앞에 위치하는 전경 색상 -->
        <item name="colorOnPrimary">#FFFFFFFF</item>

        <!-- 어플리케이션 부 색상 -->
        <!-- ex : 플로팅 버튼 -->
        <item name="colorSecondary">#FF3D7DDC</item>
        <!-- 어플리케이션 부 색상 그림자 -->
        <!-- 어플리케이션 부 색상 rgb 각각 -8 -->
        <item name="colorSecondaryVariant">#3373d2</item>
        <!-- 어플리케이션 부 색상 앞에 위치하는 전경 색상 -->
        <item name="colorOnSecondary">#FFFFFFFF</item>

    </style>

    <!-- 스플래시 화면 테마 -->
    <style name="Theme_AndroidManifest_ActivityInit" parent="Theme.Application">
        <!-- 상태바 -->
        <item name="android:statusBarColor">#FF3D7DDC</item>

        <!-- 소프트 네비게이션 바 색 -->
        <item name="android:navigationBarColor">#FF3D7DDC</item>
    </style>

    <!-- 카메라 화면 테마 -->
    <style name="Theme_AndroidManifest_ActivityBasicCamera2ApiSample" parent="Theme.Application">
        <item name="android:immersive">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!--바텀 다이얼로그 둥근 모서리 처리를 위한 원본 컬러 투명화-->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>