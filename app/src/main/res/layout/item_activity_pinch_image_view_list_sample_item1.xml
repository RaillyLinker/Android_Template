<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/image_box"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/background_item_activity_pinch_image_view_list_sample_item1_image_box"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.example.prowd_android_template.custom_view.CircleImageView
        android:id="@+id/delete_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="#FF000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/delete_btn_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textColor="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/delete_btn"
        app:layout_constraintEnd_toEndOf="@id/delete_btn"
        app:layout_constraintStart_toStartOf="@id/delete_btn"
        app:layout_constraintTop_toTopOf="@id/delete_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>