<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF3D7DDC">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/img_layout_activity_init_splash_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/apple_sd_gothic_neo_sb"
            android:text="모두의 오픈 소스!"
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/splash_logo"
            app:layout_constraintStart_toStartOf="@id/splash_logo"
            app:layout_constraintTop_toBottomOf="@id/splash_logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.example.prowd_android_template.custom_view.CircleImageView
        android:id="@+id/count_down_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:src="#77777777"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/count_down_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:text="0"
        android:textColor="#FF000000"
        app:layout_constraintBottom_toBottomOf="@id/count_down_back"
        app:layout_constraintEnd_toEndOf="@id/count_down_back"
        app:layout_constraintStart_toStartOf="@id/count_down_back"
        app:layout_constraintTop_toTopOf="@id/count_down_back" />

</androidx.constraintlayout.widget.ConstraintLayout>